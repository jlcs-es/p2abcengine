<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

	<!--
		This is a sample credential specification for a the ZKP signature scenario.
	-->

<abc:CredentialSpecification xmlns:abc="http://abc4trust.eu/wp2/abcschemav1.0"
                             Version="Version 1.0"
                             KeyBinding="true"
                             Revocable="true"
                             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                             xsi:schemaLocation="http://abc4trust.eu/wp2/abcschemav1.0 ../../../../../../../../abc4trust-xml/src/main/resources/xsd/schema.xsd">
    <abc:SpecificationUID>http://MySmartCity-Owner-Device</abc:SpecificationUID>
    <abc:FriendlyCredentialName lang="en">IoT device credential</abc:FriendlyCredentialName>
    <abc:DefaultImageReference>http://MySmartCity-Owner-Device/img</abc:DefaultImageReference>
    <abc:AttributeDescriptions MaxLength="256">
        <abc:AttributeDescription Type="http://abc4trust.eu/wp2/abcschemav1.0/revocationhandle" DataType="xs:integer" Encoding="urn:abc4trust:1.0:encoding:integer:unsigned"/>
        <abc:AttributeDescription Type="OwnerFirstName" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Name</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="OwnerLastName" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Lastname</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="OwnerDNI" DataType="xs:integer" Encoding="urn:abc4trust:1.0:encoding:integer:unsigned">
            <abc:FriendlyAttributeName lang="en">DNI</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="OwnerCity" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">City</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="OwnerPostalCode" DataType="xs:integer" Encoding="urn:abc4trust:1.0:encoding:integer:unsigned">
            <abc:FriendlyAttributeName lang="en">Postal Code</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
    </abc:AttributeDescriptions>
</abc:CredentialSpecification>